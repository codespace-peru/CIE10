<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="@dimen/min_height"
    android:weightSum="20">

    <TextView
        android:id="@+id/tvNumCapitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvCodInicialItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvCodFinalItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvTitle1Group"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:textSize="@dimen/textsize_medium"
        android:textColor="@color/textIcons"
        android:gravity="center|center_vertical"
        android:background="@color/primaryColorDark"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_medium"
        android:text="@string/dummy_text"/>

    <TextView
        android:id="@+id/tvTitle2Group"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:paddingLeft="@dimen/padding_small"
        android:paddingStart="@dimen/padding_small"
        android:paddingEnd="@dimen/padding_small"
        android:textColor="@color/primaryText"
        android:text="@string/dummy_text"
        android:textSize="@dimen/textsize_medium"
        android:gravity="center_vertical"
        android:background="@drawable/selector"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/imgVerCapitulo"
        android:background="@color/primaryColorDark"
        android:src="@drawable/ic_action_view"
        android:contentDescription="@string/app_name"/>

</LinearLayout>